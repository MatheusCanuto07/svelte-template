		"autoprefixer": "^10.4.20",
		"daisyui": "^4.12.13",
		"drizzle-kit": "^0.26.2",
		"eslint": "^9.0.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"postcss": "^8.4.47",
		"svelte": "^5.1.3",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^3.4.14",
		"tsx": "^4.19.1",
